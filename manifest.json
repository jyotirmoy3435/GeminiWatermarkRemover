{
  "manifest_version": 3,
  "name": "Gemini Watermark Remover",
  "version": "1.0",
  "description": "Removes watermarks from Gemini generated images.",
  "author": "Jyotirmoy Saha",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.googleusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content_loader.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/*.js", "src/alpha/*.bin"],
      "matches": ["*://*.google.com/*"]
    }
  ]
}